<h1>Edit <%= @bulk_discount.id %></h1>
<%= form_with url: "/merchants/#{@merchant.id}/dashboard/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percent_discount %>
  <%= f.text_field :percent_discount, value: @bulk_discount.percent_discount %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, value: @bulk_discount.quantity_threshold %>
  <%= f.submit "Update" %>
 
<% end %>