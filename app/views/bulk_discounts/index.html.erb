<h1>"<%= @merchant.name  %>'s Discounts"</h1>
<% @merchant.bulk_discounts.each do |discount| %>
<div id="discounts">
<ol>
 <p>Discount #: <%= link_to "#{discount.id}", "/merchants/#{@merchant.id}/dashboard/bulk_discounts/#{discount.id}" %></p>
  <li><p>Percent_discount: <%=discount.percent_discount %></p></li>
  <li><p>Quantity_threshold: <%=discount.quantity_threshold %></p></li>
  <li><p><%= button_to "Delete Discount #: #{discount.id}", "/merchants/#{@merchant.id}/dashboard/bulk_discounts/#{discount.id}", method: :delete, remote: true %></li></p>
  </ol> 
</div>
<% end %>
 <h2><%= link_to "Create New Discount", "/merchants/#{@merchant.id}/dashboard/bulk_discounts/new" %></h2>